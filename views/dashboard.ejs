<%- include('header.ejs') %>
<h1 class="mt-4">Dashboard</h1>                 
<div class="row">
    <div class="col-md-12">
    <div>
        <div class="row" > 
            <div class="col-md-12">
                <h1 class="text-muted" style="font-size: 28px;">
                    Your Courses
                </h1>
                <hr>
            </div>
        </div>
        <div class="row" style="align-content:center;">
            <% courses.forEach(function(course, i){%>
            <div class="col-md-4 courseBlock">
                <form action="/coursePage" method="get">
                    <input type="submit" style="font-size:24px;border:none; background-color: #FFFFFF;" name="coursename" value='<%=course.coursename%>'readonly>
                </form>
                <hr>
                <p style="color:Black"><%=course.description%></p>
            </div>
            <%})%>
        </div>
    </div>    
</div>
<%- include('footer.ejs') %>