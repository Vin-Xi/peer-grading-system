<%- include('header.ejs') %>
<h1 class="mt-4">Enroll Courses</h1>  
<hr>               
<div class="row container" style="margin-top:40px">
    <script>
    var button = $("button");
    button.on("click", function() {
    button.data("text-original", button.text());
    button.text(button.data("text-swap"));
    });
    </script>
            <div class="row">
              <% courses.forEach(function(course, i){%>
                <form method="POST" action="/addname">
              <div class="shadow" style="background-color:mintcream;">
                <div class="col-md-12" >
                    <div class="col-md-2 enrollImageDiv" >
                      </div>
                  <div class="col-md-6" style="float: left">

                    <div class="col-md-12 enrollInputDivs">
                      <label class="enrollLabel">Teacher Name: </label>
                      <input type="text" name="username" value='<%=course.username%>' class="enrollInput" readonly> 
                    </div>

                    <div class="col-md-12 enrollInputDivs">
                      <label class="enrollLabel" >Course Name: </label>
                      <input type="text" name="coursename" value='<%=course.coursename%>' class="enrollInput" readonly>
                    </div>

                    <div class="col-md-12">
                      <label class="enrollLabel" >Description:</label>
                      <p class="enrollInput"><%=course.description%></p>
                    </div>

                </div>

                  <div class="col-md-4 enrollDivs">  

                    <div class="col-md-12 enrollButtons">
                    <input class="btn btn-primary" type="submit" value="Enroll">
                    </div>

                  </div>

                </div>
              
                <div class="clearfix"></div>
                <hr /> 
            </div></form>
            <%})%>
          </div>
        </div>
        <%- include('footer.ejs') %>
